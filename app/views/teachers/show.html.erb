<div class="container">
  <h1><%= @teacher.name %> <small>-> teaches at <%= @teacher.campus %></small></h1>
  <h2>
    <%= pluralize @teacher.reviews.size, "review" %>
  </h2>

  <div id="reviews">
    <% if @teacher.reviews.blank? %>
      Be the first to leave a review for <%= @teacher.name %>
    <% else %>
      <% @teacher.reviews.each do |review| %>
        <p><%= review.content %></p>
      <% end %>
    <% end %>
  </div>
</div>

